clear;
x=(-1:0.01:1)*pi;
len=length(x);

y1=cos(x);
I1_V=repmat(y1,len,1);%vertical
imshow(I1);

I1_H=imrotate(I1,90);


y2=cos(5*pi*x);
I2=repmat(y2,len,1);
figure,imshow((I2));

x=(-2:0.01:2)*pi;
len=length(x);
y2=cos(5*pi*x);
I3=repmat(y2,len,1);
I3=imrotate(I3,45);
figure,imshow(I3);

[x,y]=size(I2);
I3=imcrop(I3,[x,y,x,y]);
figure,imshow(I3);

